<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/producto_nombreIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/tred"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/producto_nombreIL"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/producto_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_imagen"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="Descripcion del producto"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/producto_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_descripcion"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Cantidad: 000  "
            android:textColor="@color/tgreen"
            />

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_descripcion"
            android:layout_toEndOf="@id/producto_cantidad"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Precio: "
            android:textStyle="bold"
            android:textColor="@color/tblue2"
            />



    </RelativeLayout>




</androidx.cardview.widget.CardView>