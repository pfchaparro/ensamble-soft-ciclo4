<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity">

    <RelativeLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tpurple"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/precio_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio Total: "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/mensaje1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tblue2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Felicitaciones, tu pedido ha sido procesado. Muchas gracias por tu compra."
        android:textSize="20dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id1"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/siguienteProceso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botone1"
        android:text="Continuar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

</RelativeLayout>