<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textlines"
        >

        <TextView
            android:id="@+id/producto_nombreIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="20dp"
            android:textColor="@color/tred"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/producto_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_nombreIL"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Cantidad: 000  "
            android:textColor="@color/tgreen"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/t_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_nombreIL"
            android:layout_toEndOf="@id/producto_cantidad"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Precio: $"
            android:textStyle="bold"
            android:textColor="@color/tblue2"
            />

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_nombreIL"
            android:layout_toEndOf="@id/t_precio"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Precio: "
            android:textStyle="bold"
            android:textColor="@color/tblue2"
            />

        <TextView
            android:id="@+id/producto_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producto_precio"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="21dp"
            android:text="Descripcion: "
            android:textColor="@color/black"
            android:visibility="visible"
            />



    </RelativeLayout>




</androidx.cardview.widget.CardView>