<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAdminActivity">

    <TextView
        android:id="@+id/text1adm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion - Admin"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/purple_500"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen1adm"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/text1adm"
        android:layout_marginTop="5dp"
        android:src="@drawable/groot"
        />

    <EditText
        android:id="@+id/numeroadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen1adm"
        android:layout_margin="20dp"
        android:hint="Ingrese su numero"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/codigoadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen1adm"
        android:layout_margin="20dp"
        android:hint="Ingrese el codigo de verificacion"
        android:background="@drawable/textos"
        android:padding="10dp"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/enviarnumeroadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroadm"
        android:text="Enviar codigo"
        android:layout_margin="22dp"
        android:background="@drawable/botone1"
        android:textColor="@color/torange"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/enviarcodigoadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/numeroadm"
        android:text="Confirmar"
        android:layout_margin="22dp"
        android:background="@drawable/botone1"
        android:textColor="@color/torange"
        android:textSize="16dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text2adm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otros metodos de inicio de sesion"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:layout_above="@id/googleadm"
        android:textSize="20dp"
        android:textColor="@color/purple_500"/>


    <Button
        android:id="@+id/googleadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:layout_margin="22dp"
        android:background="@drawable/botones2"
        android:textColor="@color/torange"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>